{
    "name": "ifcastle/ifcastle",
    "type": "project",
    "description": "IFCastle monorepo",
    "keywords": ["ifcastle"],
    "license": "MIT",
    "authors": [
        {
            "name": "Edmond Dantes",
            "email": "edmondifthen@proton.me"
        }
    ],
    "repositories": [
        { "type": "path", "url": "./packages/*", "options": { "symlink": true } }
    ],
    "require": {
        "php": ">=8.5",
        "ifcastle/amphp-pool": "*",
        "ifcastle/application": "*",
        "ifcastle/async-contracts": "*",
        "ifcastle/configurator-toml": "*",
        "ifcastle/configurator-ini": "*",
        "ifcastle/console": "*",
        "ifcastle/design-patterns": "*",
        "ifcastle/di": "*",
        "ifcastle/events": "*",
        "ifcastle/amphp-engine": "*",
        "ifcastle/amphp-logger": "*",
        "ifcastle/amphp-web-server": "*",
        "ifcastle/codestyle": "*",
        "ifcastle/monolog": "*",
        "ifcastle/package-installer": "*",
        "ifcastle/swoole-engine": "*",
        "ifcastle/os-utilities": "*",
        "ifcastle/open-telemetry": "*",
        "ifcastle/protocol-contracts": "*",
        "ifcastle/rest-api": "*",
        "ifcastle/service-manager": "*",
        "ifcastle/type-definitions": "*",
        "ifcastle/user-manager": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.3"
    },
    "autoload-dev": {
        "psr-4": {
            "IfCastle\\AmpPool\\": "packages/amphp-pool/tests/",
            "IfCastle\\Amphp\\": "packages/amphp-engine/tests/",
            "IfCastle\\Amphp\\Logger\\": "packages/amphp-logger/tests/",
            "IfCastle\\AmphpWebServer\\": "packages/amphp-web-server/tests/",
            "IfCastle\\Application\\": "packages/application/tests/",
            "IfCastle\\CodeStyle\\": "packages/codestyle/tests/",
            "IfCastle\\Configurator\\Toml\\": "packages/configuator-toml/tests/",
            "IfCastle\\Configurator\\": "packages/configurator-ini/tests/",
            "IfCastle\\Console\\": "packages/console/tests/",
            "IfCastle\\DesignPatterns\\": "packages/design-patterns/tests/",
            "IfCastle\\DI\\": "packages/di/tests/",
            "IfCastle\\Events\\": "packages/events/tests/",
            "IfCastle\\Monolog\\": "packages/monolog/tests/",
            "IfCastle\\OpenTelemetry\\": "packages/php-open-telemetry/tests/",
            "IfCastle\\OsUtilities\\": "packages/os-utilities/tests/",
            "IfCastle\\PackageInstaller\\": "packages/package-installer/tests/",
            "IfCastle\\RestApi\\": "packages/rest-api/tests/",
            "IfCastle\\ServiceManager\\": "packages/service-manager/tests/",
            "IfCastle\\Services\\": "packages/user-manager/tests/",
            "IfCastle\\Swoole\\": "packages/swoole-engine/tests/",
            "IfCastle\\TypeDefinitions\\": "packages/type-definitions/tests/",
            "Examples\\": [
                "packages/design-patterns/examples/",
                "packages/amphp-pool/examples/",
                "packages/service-manager/examples/",
                "packages/type-definitions/examples/"
            ]
        }
    },
    "scripts": {
        "test": "phpunit --display-warnings --display-errors --display-notices",
        "analyse": "phpstan analyse --memory-limit=1G",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "rector": "rector process --dry-run",
        "rector:fix": "rector process"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "*": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
